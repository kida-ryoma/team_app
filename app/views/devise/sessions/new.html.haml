.main-wrapper.login
  = render partial: "homes/login_sidebar"
  %main
    .login__wrapper
      %h2.login__title 
        Log in
        %br
        %span.login__title__description
          ログイン
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .field
          = f.label :email
          %br/
          = f.email_field :email, autofocus: true, autocomplete: "email", class: "input-form"
        .field
          = f.label :password
          %br/
          = f.password_field :password, autocomplete: "current-password", class: "input-form"
        - if devise_mapping.rememberable?
          .field
            = f.check_box :remember_me
            = f.label :remember_me
        .actions
          = f.submit "Log in", class:"sign-btn"
